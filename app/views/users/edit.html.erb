<div id="loginbox">
<br><br><br><br><br>

<div class="row-fluid">
  <h2 class="pagination-centered"><small id="notice"><%= notice %></small></h2>
</div>

<div class="row-fluid">
  <div class="span4"></div>
  <div class="span4">
    <%= image_tag @user.avatar, :class => "img-circle" %>
  </div>
  <div class="span4"></div>
</div>

<br>

<div>
  <%= form_tag user_url, :class => "form form-horizontal", :method => "PUT" do %>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= label_tag :avatar, "Profile Picture", :class => "control-label" %>
          <div class="controls">
            <%= file_field_tag :avatar, :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= label_tag :first_name, "First Name", :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag :first_name,"", :value => "#{@user.first_name}", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= label_tag :last_name, "Last Name", :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag :last_name, "", :value => "#{@user.last_name}", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= label_tag :email, "Email", :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag :email, "", :value => "#{@user.email}", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= label_tag :password, "Password", :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag :password, "", :placeholder => "type new password...", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= label_tag :password_confirmation, "Confirm Password", :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag :password_confirmation, "", :placeholder => "confirm your password...", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="submitbox">
          <div class="actions">
            <%= submit_tag 'Update', :class => "btn btn-block btn-primary btn-large" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

  <%end%>

</div>