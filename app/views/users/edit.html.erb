<div id="loginbox">
<br><br><br><br><br>

<div class="row-fluid">
  <h2 class="pagination-centered"><small id="notice"><%= notice %></small></h2>
</div>

<div class="row-fluid">
  <div class="span4"></div>
  <div class="span4">
    <%= image_tag @user.avatar, :class => "img-rounded" %>
  </div>
  <div class="span4"></div>
</div>

<br>

<div class="form form_horizontal">
  <%= form_for(@user, :html => {:multipart => true, :class => "form form-horizontal" }) do |f| %>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= f.label :avatar, "Profile Picture", :class => "control-label" %>
          <div class="controls">
            <%= f.file_field :avatar, :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= f.label :first_name, "First Name", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :first_name, :value => "#{@user.first_name}", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= f.label :last_name, "Last Name", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :last_name, :value => "#{@user.last_name}", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= f.label :email, "Email", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :email, :value => "#{@user.email}", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= f.label :password, "Password", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :password, :placeholder => "type new password...", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="control-group">
          <%= f.label :password_confirmation, "Confirm Password", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :password_confirmation, :placeholder => "confirm your password...", :class => "span12" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

    <div class="row-fluid">
      <div class="span4"></div>
      <div class="span4">
        <div class="submitbox">
          <div class="actions">
            <%= f.submit 'Update', :class => "btn btn-block btn-primary btn-large" %>
          </div>
        </div>
      </div>
      <div class="span4"></div>
    </div>

  <%end%>

</div>







