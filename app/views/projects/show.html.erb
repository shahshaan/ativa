<div class="page-header">
  <h1><%=t '.title', :default => @project.name %> (<%= @project.id %>)</h1>
</div>



<div class="row-fluid">
  
    <% @project.phases.each do |phase| %>
      <div class="span2">
        <i class="icon-fire icon-large"></i>
          <% if phase.id == @current_phase.id %>
          <%= link_to phase.type, project_url(:phase => "#{phase.type.downcase}"), :class => "btn disabled" %>
          <div class="progress"><div class="bar bar-active" style="width: <%= phase.completion %>%;"></div></div>
          <% else %>
          <%= link_to phase.type, project_url(:phase => "#{phase.type.downcase}"), :class => "btn disabled" %>
          <div class="progress"><div class="bar bar-success" style="width: <%= phase.completion %>%;"></div></div>
          <% end %>
        
      </div>
    <% end %>
    <div class="span1"></div>
  </div>

  <p id="notice"><%= notice %></p>

  <% if @page.present? %>
    <%#= render "projects/pages/#{@page}" %>
    <%= render "projects/pages/phase" %>

  <% end %>
</div>â€‹

