<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="row-fluid">
  <div class="span1"></div>
  <div class="span10"><h2>Active Projects<small><%= link_to " Add project", new_project_path %></small></h2></div>
  <div class="span1"></div>
</div>

<div class="row-fluid">
  <div class="span2"></div>
  <div class="span8">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th class="span6">Project Name</th>
          <th  class="span6">Last Updated</th>
        </tr>
      </thead>
      <tbody>
        <% @active_projects.each do |project| %>
          <tr>
            <td><%= link_to project.name, project %></td>
            <td>11/12/12</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="span2"></div>
</div>

<div class="row-fluid">
  <div class="span1"></div>
  <div class="span10"><h2>Completed Projects</h2></div>
  <div class="span1"></div>
</div>

<div class="row-fluid">
  <div class="span2"></div>
  <div class="span8">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th class="span6">Project Name</th>
          <th  class="span6">Last Updated</th>
        </tr>
      </thead>
      <tbody>
        <% @completed_projects.each do |project| %>
          <tr>
            <td><%= link_to project.name, project %></td>
            <td>11/12/12</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="span2"></div>
</div>


<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.active %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

