
<!-- Phase title -->
  <h2>
    <%= @phase.capitalize %> Phase 
    <small>
      <% if @upload == 'true' || @subpost_upload == 'true' %>
        <%= link_to "cancel", project_url(:page => @page, :phase => @phase, :upload => '') %>
      <% else %>
        <%= link_to "add call", project_url(:page => @page, :phase => @phase, :upload => 'true') %>
      <% end -%>
    </small>
  </h2>
<!-- end -->

<!-- Renders uploaders -->
  <% if @upload == 'true' %>
    <div class="row-fluid">
      <div class="span12">
          <%= render "projects/pages/upload" %>
      </div>
    </div>
  <% end %>

  <!-- Renders the new subpost uploader -->
    <% if @subpost_upload == 'true' %>
      <div class="row-fluid">
        <div class="span12">
            <%= render "projects/pages/subpost_upload" %>
        </div>
      </div>
    <% end %>
  <!-- end -->

<!-- end -->

<br>

