    <a class="pull-left" href="#">
      <%= image_tag Post.last.user.avatar_url, :class => "media-object img-rounded pagination-centered", :width => "60" %>
      <p class="pagination-centered">Shaan</p>
      
    </a>
    <div class="media-body">
      <span class="row-fluid">
        <a href="" class="span6"><h4 class="media-heading">Title of Post <small>12/12/12</small></h4></a>
