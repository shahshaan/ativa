


<% @view_post.attachments.each do |attachment| %>	
	<div class="row-fluid">
		<div class="span12">
			<div class="well">
				<h3><%= attachment.title %></h3>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span10 offset2">
			<ul class="media-list">
			  <% attachment.notes.each do |note| %>
			    <li class="media">
			      <a class="pull-left" href="#">
			        <%= image_tag note.user.avatar, :class => "media-object img-rounded pagination-centered", :width => "40", :height => "40" %>
			        <p class="pagination-centered"><%= note.user.first_name %></p>
			      </a>
			      <div class="media-body">
			        <p><%= note.text %></p>
			      </div>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
<% end %>