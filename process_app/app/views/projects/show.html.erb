<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %> <%= @project.id %>
</p>

<p>
  <ul>Phases:
  	<% @project.phases.each do |phase| %>
  		<li>
  			<% if phase.id == @current_phase.id %>
  				<span style="color:red;"><%= phase.type %></span>
  			<% else %>
  				<%= phase.type %>
  			<% end -%>,
  			<% if phase.completed? %>
  				<%= "Completed" %>
  			<% else %>
  				<%= phase.completion%>% Complete
  			<% end %>
  			<%= phase.id %>
  		</li>
  	<% end -%>
  </ul>
</p>

<p>
  <% @current_phase.posts.each do |post| %>
    <p>
      <%= post.title %>
      <%= post.message %>
    </p>
  <% end %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="field">
    <%= f.label :attachment %><br />
    <%= f.text_field :attachment %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.check_box :comment %>
  </div>
  <div class="field">
    <%= f.label :phase_id %><br />
    <%= f.number_field :phase_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
